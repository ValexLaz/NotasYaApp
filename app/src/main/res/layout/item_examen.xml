<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#EFEFEF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/text_view_materiaExamen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Examen:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_view_fechaE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Examen:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_fecha"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_horaE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de Examen:"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_view_hora"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
